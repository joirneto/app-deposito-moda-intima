<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="match_parent"
tools:context=".activity.VendaDetalheActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@color/colorPrimaryDark"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/idVendedorVendaDetalhe"
        android:background="@drawable/background_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:textColor="@color/colorPrimary"
        android:text="VENDEDOR" />

    <TextView
        android:id="@+id/idClienteVendaDetalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/background_edit_text"
        android:drawableEnd="@drawable/ic_impressao"
        android:onClick="imprimirVenda"
        android:padding="3dp"
        android:text="CLIENTE"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/idStatusVendaDetalhe"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:background="@drawable/background_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="STATUS VENDA" />
</LinearLayout>

<ProgressBar
    android:id="@+id/idprogressBarVendaDetalhe"
    style="?android:attr/progressBarStyle"
    android:layout_width="80dp"
    android:layout_height="98dp"
    android:layout_gravity="center"
    android:visibility="visible" />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/idRecyclerVendaDetalhe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:layout_weight="1"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:background="@drawable/background_edit_text"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idQuantidadeFinalVendaDetalhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Qtd Itens:"
            android:textColor="@color/colorPrimary">

        </TextView>

        <TextView
            android:id="@+id/idValorFinalVendaDetalhe"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="TOTAL: R$">

        </TextView>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idVendaDetalheEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/background_botao_primary"
            android:onClick="editarEndereco"
            android:padding="5dp"
            android:text="ENDEREÃ‡O"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/idBotaoFinalizarVendaDetalhe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/background_botao_alterar_status"
            android:onClick="finalizarEtapa"
            android:text="Finalizar Etapa"
            android:textColor="@android:color/holo_blue_bright" />


    </LinearLayout>

</LinearLayout>


</LinearLayout>