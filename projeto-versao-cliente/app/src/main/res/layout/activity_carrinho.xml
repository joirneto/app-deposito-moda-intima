<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="match_parent"
tools:context=".activity.CarrinhoActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@color/colorPrimaryDark"
    android:layout_height="wrap_content">

    <TextView
        android:background="@drawable/background_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:text="MEU CARRINHO" />

</LinearLayout>

<ProgressBar
    android:id="@+id/idprogressBarCarrinho"
    style="?android:attr/progressBarStyle"
    android:layout_width="80dp"
    android:layout_height="98dp"
    android:layout_gravity="center"
    android:visibility="visible" />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/idRecyclerCarrinho"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:layout_weight="1"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="8dp"
        android:padding="10dp"
        android:background="@drawable/background_edit_text"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idQuantidadeFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Qtd Itens:"
            android:textColor="@color/colorPrimary">

        </TextView>

        <TextView
            android:id="@+id/idValorFinal"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="TOTAL: R$">

        </TextView>





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/idBotaoCancelarVenda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_botao_cancelar"
            android:textColor="@android:color/holo_red_light"
            android:layout_margin="8dp"
            android:text="Limpar Carrinho" />

        <Button
            android:id="@+id/idBotaoFinalizarVenda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textColor="@android:color/holo_green_light"
            android:background="@drawable/background_botao_confirmar"
            android:text="Finalizar Venda" />

    </LinearLayout>

</LinearLayout>
    <include

        android:id="@+id/idBottomNavigationTabCarrinho"
        layout="@layout/bottom_navigation_tabs_clientes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible" />

</LinearLayout>