<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/background_botao_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomePesquisarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="2dp"
            android:text="NOME DO CLIENTE"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold">


        </TextView>
        <TextView
            android:id="@+id/idtelefonePesquisarCliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:gravity="start"
            android:textColor="@color/colorPrimaryDark"
            android:text="CONTATO DO CLIENTE">

        </TextView>




        <TextView
            android:id="@+id/idCidadePesquisarCliente"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_margin="3dp"
            android:gravity="start"
            android:textColor="@color/colorPrimaryDark"
            android:text="CIDADE DO CLIENTE">

        </TextView>




    </LinearLayout>
</androidx.cardview.widget.CardView>